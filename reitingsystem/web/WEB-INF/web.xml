<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.conarhco.rating.AutherizationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>com.conarhco.rating.admin.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/user/admin/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.conarhco.rating.DataModule$LifeListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>VoteServlet</servlet-name>
        <servlet-class>com.conarhco.rating.VoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DrawStatisticsServlet</servlet-name>
        <servlet-class>com.conarhco.rating.drawing.DrawStatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.conarhco.rating.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitServlet</servlet-name>
        <servlet-class>com.conarhco.rating.ExitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteSiteServlet</servlet-name>
        <servlet-class>com.conarhco.rating.DeleteSiteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNoteServlet</servlet-name>
        <servlet-class>com.conarhco.rating.AddNoteServlet</servlet-class>
        <init-param>
            <param-name>max</param-name>
            <param-value>200</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.conarhco.rating.account.change.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeProfileServlet</servlet-name>
        <servlet-class>com.conarhco.rating.account.change.ChangeProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.conarhco.rating.auth.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.conarhco.rating.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSiteServlet</servlet-name>
        <servlet-class>com.conarhco.rating.AddSiteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoteServlet</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DrawStatisticsServlet</servlet-name>
        <url-pattern>/user/drawServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNoteServlet</servlet-name>
        <url-pattern>/addnote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExitServlet</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/changepass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/authServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeProfileServlet</servlet-name>
        <url-pattern>/user/changeprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteSiteServlet</servlet-name>
        <url-pattern>/user/deletesite</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSiteServlet</servlet-name>
        <url-pattern>/user/addsite</url-pattern>
    </servlet-mapping>
</web-app>
